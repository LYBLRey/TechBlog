<div class="flex-wrap">
  {{#each articles as |article| }}
  <div class="row mb-4 article">
    <div class="col-md-5">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        <a class="links" href="/articles/{{article.id}}">{{article.name}}</a>
      </h2>
      
      <p>Created by <span class="names">{{article.user.name}}</span> on {{format_date article.date_created}}</p>
    </div>

  </div>
  {{/each}}
</div>