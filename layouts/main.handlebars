<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TECH BLOG</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <a class="links" href="/">TECH BLOG</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
          <a class="nav_btns links" href="/articles">New Article</a> | <button class="nav_btns links no-button" id="logout">Logout</button>
        {{else}}
        <a class="links" id="login">Login</a>
        <script src="/js/login.js"></script>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>

  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

  
  <div class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="links modal-card-title">Login</p>
    </header>
    <section class="modal-card-body">
      <form class="form login-form">
      <div class="form-group">
        <label for="linksemail-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
        <a id="signup-modal links" href="/signup">Signup</a>
      </div>
    </form>

    </section>
    
  </div>
</div>
{{#if logged_in}}
<footer>
  <div class="names footer-name">@Sareybodd Chhorn</div>
  <a href="https://github.com/LYBLRey"><img src="github.png"  alt=""></a>
  <a href="https://www.linkedin.com/in/rey-chhorn/"><img src="linkedin.png" href="https://github.com/LYBLRey" alt=""></a>
  <a href="mailto:sareyboddc@gmail.com"><img src="email.png" href="https://github.com/LYBLRey" alt=""></a>
</footer>
{{/if}}

</body>

</html>
